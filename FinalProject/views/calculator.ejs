<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quote Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      padding: 0;
      box-sizing: border-box;
    }
    .header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }
    .header button {
      background-color: #2e8b57;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }
    .header button:hover {
      background-color: #1c5f3b;
    }
    form {
      max-width: 600px;
      margin: auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }
    input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .output-fields {
      margin-top: 20px;
      padding: 10px;
      border: 1px solid #eee;
      background-color: #f9f9f9;
      border-radius: 5px;
    }
    .output-fields p {
      margin: 5px 0;
    }
    .submit-btn {
      margin-top: 15px;
      background-color: #2e8b57;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }
    .submit-btn:hover {
      background-color: #1c5f3b;
    }
  </style>
</head>
<body>
  <div class="header">
    <button onclick="window.location.href='/user-management'">Manage Users</button>
    <form action="/" method="GET" style="display:inline;">
        <button type="submit">Back to Home</button>
      </form>
    <button onclick="window.location.href='/submittedQuotes'">Manage Quotes</button>
  </div>

  <form id="quoteForm" method="POST" action="/submitQuote">
    <label for="description">Quote Description</label>
    <input type="text" id="description" name="description" required>

    <label for="location">Location</label>
    <input type="text" id="location" name="location" required>

    <label for="quoteYear">Quote Year</label>
    <input type="number" id="quoteYear" name="quoteYear" value="<%= new Date().getFullYear() %>" readonly>

    <label for="numOysters">Number of Oysters Harvested</label>
    <input type="number" id="numOysters" name="numOysters" required>

    <label for="seedPurchased">Oyster Seed Purchased</label>
    <input type="number" id="seedPurchased" name="seedPurchased" required>

    <div class="output-fields">
      <p><strong>Expected Yield:</strong> <span id="expectedYield">--</span></p>
      <p><strong>Expected Commodity Value:</strong> <span id="expectedValue">--</span></p>
    </div>

    <button type="button" class="submit-btn" id="calculateBtn">Calculate</button>
    <button type="submit" class="submit-btn">Submit</button>
  </form>

  <script>
    document.getElementById("calculateBtn").addEventListener("click", () => {
      const numOysters = parseFloat(document.getElementById("numOysters").value) || 0;
      const seedPurchased = parseFloat(document.getElementById("seedPurchased").value) || 0;

      // Placeholder for your calculation logic
      const expectedYield = numOysters * 0.8; // Example calculation
      const expectedValue = seedPurchased * 5; // Example calculation

      // Output results
      document.getElementById("expectedYield").textContent = expectedYield.toFixed(2);
      document.getElementById("expectedValue").textContent = `$${expectedValue.toFixed(2)}`;
    });
  </script>
</body>
</html>
