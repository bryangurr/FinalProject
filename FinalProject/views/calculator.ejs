<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quote Form</title>
  <link rel="stylesheet" href="calculator.css">
</head>
<body>
  <header>
    <div class="banner">
      <!-- Left Side (Back to Home) -->
      <div class="left-buttons">
        <button onclick="window.location.href='/'" class="button">Back to Home</button>
      </div>

      <!-- Right Side (Manage Users and Quotes) -->
      <div class="right-buttons">
        <button onclick="window.location.href='/user-management'" class="button">Manage Users</button>
        <button onclick="window.location.href='/submittedQuotes'" class="button">Manage Quotes</button>
      </div>
    </div>
  </header>

  <form id="quoteForm" method="POST" action="/submitQuote">
    <label for="description">Quote Description</label>
    <input type="text" id="description" name="description" required>

    <label for="location">Location</label>
    <input type="text" id="location" name="location" required>

    <label for="quoteYear">Quote Year</label>
    <input type="number" id="quoteYear" name="quoteYear" value="<%= new Date().getFullYear() %>" readonly>

    <label for="numOysters">Number of Oysters Harvested</label>
    <input type="number" id="numOysters" name="numOysters" required>

    <label for="seedPurchased">Oyster Seed Purchased</label>
    <input type="number" id="seedPurchased" name="seedPurchased" required>

    <div class="output-fields">
      <p><strong>Expected Yield:</strong> <span id="expectedYield">--</span></p>
      <p><strong>Expected Commodity Value:</strong> <span id="expectedValue">--</span></p>
    </div>

    <button type="button" class="submit-btn" id="calculateBtn">Calculate</button>
    <button type="submit" class="submit-btn">Submit</button>
  </form>

  <script>
    document.getElementById("calculateBtn").addEventListener("click", () => {
      const numOysters = parseFloat(document.getElementById("numOysters").value) || 0;
      const seedPurchased = parseFloat(document.getElementById("seedPurchased").value) || 0;

      // Placeholder for your calculation logic
      const expectedYield = numOysters * 0.8; // Example calculation
      const expectedValue = seedPurchased * 5; // Example calculation

      // Output results
      document.getElementById("expectedYield").textContent = expectedYield.toFixed(2);
      document.getElementById("expectedValue").textContent = `$${expectedValue.toFixed(2)}`;
    });
  </script>
</body>
</html>
