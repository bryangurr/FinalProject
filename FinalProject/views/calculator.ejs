<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quote Form</title>
  <link rel="stylesheet" href="calculator.css">
</head>
<body>
  <header>
    <div class="banner">
      <!-- Left Side (Back to Home) -->
      <div class="left-buttons">
        <button onclick="window.location.href='/logout'" class="button">Logout</button>
      </div>

      <!-- Right Side (Manage Users and Quotes) -->
      <div class="right-buttons">
        <button onclick="window.location.href='/user-management'" class="button">Manage Users</button>
        <button onclick="window.location.href='/submittedQuotes'" class="button">Manage Quotes</button>
      </div>
    </div>
  </header>
  <script>
    // Function to update the county options based on the selected state
    function updateCountyOptions() {
      const state = document.getElementById('state').value;
      const countySelect = document.getElementById('county');
      countySelect.innerHTML = ''; // Clear previous options

      if (state === 'Florida') {
        const floridaCounties = ['Gulf', 'Wakulla', 'Indian River'];
        floridaCounties.forEach(county => {
          countySelect.innerHTML += `<option value="${county}">${county}</option>`;
        });
      } else if (state === 'Alabama') {
        const alabamaCounties = ['Mobile', 'Baldwin'];
        alabamaCounties.forEach(county => {
          countySelect.innerHTML += `<option value="${county}">${county}</option>`;
        });
      }
    }
  </script>

  <form id="quoteForm" method="POST" action="/submitQuote">
    <label for="description">Quote Description</label>
    <input type="text" id="description" name="description" required>

    <label for="state">State</label>
    <select id="state" name="state" required onchange="updateCountyOptions()">
      <option value="Florida">Florida</option>
      <option value="Alabama">Alabama</option>
    </select>

    <label for="county">County</label>
    <select id="county" name="county" required></select>

    <label for="quoteYear">Quote Year</label>
    <input type="number" id="quoteYear" name="quoteYear" value="<%= new Date().getFullYear() %>" readonly>

    <label for="numOysters">Number of Oysters Harvested</label>
    <input type="number" id="numOysters" name="numOysters" required>

    <label for="seedPurchased">Oyster Seed Purchased</label>
    <input type="number" id="seedPurchased" name="seedPurchased" required>

    <label for="meanSurvivalRate">Mean Survival Rate</label>
<input type="number" id="meanSurvivalRate" name="meanSurvivalRate" step="0.01" min="0" max="1" value="0.95" required>

<label for="cappedYield">Capped Yield</label>
<input type="number" id="cappedYield" name="cappedYield" required>

<label for="locationRate">Location Rate</label>
<input type="number" id="locationRate" name="locationRate" readonly>

<!-- Hidden field to store locationId -->
<input type="hidden" id="locationId" name="locationId">

<!-- Hidden field to store creator (current user's info) -->
<!-- <input type="hidden" id="creator" name="creator" value=""> -->

    <div class="output-fields">
      <p><strong>Expected Yield:</strong> <span id="expectedYield">--</span></p>
      <p><strong>Expected Commodity Value:</strong> <span id="expectedValue">--</span></p>
    </div>
<br>
    <button type="button" class="button" id="calculateBtn">Calculate</button>
    <button type="submit" class="button">Submit</button>
  </form>

  
</body>
</html>
