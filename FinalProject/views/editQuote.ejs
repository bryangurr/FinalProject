<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Quote</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Link to CSS -->
</head>
<body>
    <h1>Edit Quote</h1>
    <form action="/editQuote/<%= quoteInfo.quoteid %>" method="POST">
        <div>
            <label for="quotedescription">Quote Description:</label>
            <textarea id="quotedescription" name="quotedescription" required><%= quoteInfo.quotedescription %></textarea>
        </div>

        <div>
            <label for="locationid">Location:</label>
            <select id="locationid" name="locationid" required>
                <% locationInfo.forEach(location => { %>
                    <option value="<%= location.locationid %>" <%= location.locationid === quoteInfo.locationid ? 'selected' : '' %>>
                        <%= location.county %>, <%= location.state %> <!-- Assuming location has a 'locationname' field -->
                    </option>
                <% }) %>
            </select>
        </div>

        <div>
            <label for="quoteyear">Quote Year:</label>
            <input type="number" id="quoteyear" name="quoteyear" value="<%= quoteInfo.quoteyear %>" required>
        </div>

        <div>
            <label for="meansurviverate">Mean Survival Rate:</label>
            <input type="number" id="meansurviverate" name="meansurviverate" value="<%= quoteInfo.meansurviverate %>" step="0.01" required>
        </div>

        <div>
            <label for="curryearseed">Current Year Seed:</label>
            <input type="number" id="curryearseed" name="curryearseed" value="<%= quoteInfo.curryearseed %>" required>
        </div>

        <div>
            <label for="cappedyield">Capped Yield:</label>
            <input type="number" id="cappedyield" name="cappedyield" value="<%= quoteInfo.cappedyield %>" step="0.01" required>
        </div>

        <div>
            <label for="priceelectionper">Price Election Per:</label>
            <input type="number" id="priceelectionper" name="priceelectionper" value="<%= quoteInfo.priceelectionper %>" step="0.01" required>
        </div>

        <div>
            <label for="expcommodvalue">Expected Commodity Value:</label>
            <input type="number" id="expcommodvalue" name="expcommodvalue" value="<%= quoteInfo.expcommodvalue %>" step="0.01" required>
        </div>

        <div>
            <label>Creator:</label>
            <p><%= quoteInfo.firstname %> <%= quoteInfo.lastname %></p> <!-- Display creator's name as non-editable -->
        </div>

        <div>
            <button type="submit">Update Quote</button>
            <a href="/submittedQuotes">Cancel</a> <!-- Optional: Link back to quotes list -->
        </div>
    </form>
</body>
</html>
