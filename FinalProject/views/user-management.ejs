<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Records</title>
  <link rel="stylesheet" href="user-management.css">
</head>
<body>
  <!-- Header Banner -->
  <header>
    <div class="banner">
      <div class="left-buttons">
        <button onclick="window.location.href='/calculator'" class="button">Back to Calculator</button>
      </div>
      <h1>User Management</h1>
      <div class="right-buttons">
        <button onclick="window.location.href='/createAccount'" class="button">Add User</button>
      </div>
    </div>

    <!--search bar-->
    <form action="/searchUsers" method="GET" class="search-form">
      <label for="searchFirstName">First Name:</label>
      <input type="text" id="searchFirstName" name="firstName" placeholder="Enter first name">
  
      <label for="searchLastName">Last Name:</label>
      <input type="text" id="searchLastName" name="lastName" placeholder="Enter last name">
  
      <button type="submit" class="button-small">Search</button>
    </form>

  </header>
  <style>
    .search-form {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 20px 0;
}

.search-form input {
    padding: 5px;
    font-size: 1rem;
}

.search-form button {
    padding: 5px 15px;
    font-size: 1rem;
    cursor: pointer;
}
  </style>

  <!-- User Records Table -->
  <main>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Password</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>User Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (userlogins.length > 0) { %>
          <% userlogins.forEach(row => { %>
            <tr>
              <td><%= row.username %></td>
              <td><%= row.password %></td>
              <td><%= row.firstname %></td>
              <td><%= row.lastname %></td>
              <td><%= row.email %></td>
              <td><%= row.phone %></td>
              <td><%= row.usertype %></td>
              <td>
                <form action="/editUser/<%= row.userid %>" method="GET" style="display:inline;">
                  <button type="submit" class="button-small">Edit</button>
                </form>
                <form action="/deleteUser/<%= row.userid %>" method="POST" style="display:inline;">
                  <button type="submit" class="button-small" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>
